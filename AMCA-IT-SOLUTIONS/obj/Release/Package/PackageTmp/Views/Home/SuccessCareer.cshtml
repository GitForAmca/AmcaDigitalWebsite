@{
    ViewBag.Title = "Thankyou";
    Layout = "~/Views/Shared/_LayoutSuccess.cshtml";
    ViewBag.link = "https://goldenvisau.ae/";
}

<div class="container">
    <div class="row">
        <div class="col-12 text-center d-flex min-vh-100 justify-content-center align-items-center">
            <div class="my-5">
                <h1>Thank You!</h1>
                <img src="~/images/check.svg" style="width: 10%" />
                <p><strong>Candidate Id: @TempData["Id"]</strong></p>
                <p>
                    Dear <strong class="text-dark">@TempData["Name"]</strong>,
                    Thanks for Applying for the position of
                    <strong class="text-dark">@TempData["ApplyJob"]</strong>.
                    We will review your Application and if finds suitable, will get back to you shortly.
                </p>
                <div>
                    <a href="@Url.Action("Index","Home")" class="btn btn-primary">Go To Homepage</a>
                </div>
            </div>
        </div>
    </div>
</div>

