@model AMCA_IT_SOLUTIONS.Models.Validation
@using CaptchaMvc.HtmlHelpers;
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
@{
    ViewBag.Controller = "Home";
    ViewBag.CurrentPage = "Contact Us";
    ViewBag.Title = "Contact Us";
    ViewBag.PageTitle = "Contact Us";
    ViewBag.Keyword = "";
    ViewBag.Description = "";

}

@Html.Partial("_TopBannerBreadCrumb");
<section class="py-5">
    <div class="container">
        <div class="pb-3 text-center">
            <h1 class="section-title">Get In Touch <span> With Us</span></h1>
            <p>A member of our staff would always be happy to assist you if you have any questions or concerns. Please feel free to contact us by phone or email, and we will respond as soon as possible.</p>
        </div>
        <div class="row align-items-center">
            <div class="col-lg-7">
                <h2 class="section-title">Location & <span>Contact Details</span></h2>
                <div class="row py-5">
                    <div class="col-md-6">
                        <div class="row align-items-center">
                            <div class="col-3">
                                <img src="../../Images/icon/location-100.svg" width="64" height="64" alt="location ITAMCA" />
                            </div>
                            <div class="col-9">
                                <h4>Our Location</h4>
                                <p>Unit No. 1801, Cluster T Fortune Executive Tower JLT, DMCC, Dubai, UAE</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="row align-items-center">
                            <div class="col-3">
                                <img src="../../Images/icon/phone-64.svg" width="64" height="64" alt="phone ITAMCA" />
                            </div>
                            <div class="col-9">
                                <h4>Call Us</h4>
                                <a href="tel:+97145654128" class="text-dark" title=""> +971 4 565 4128</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="row align-items-center">
                            <div class="col-3">
                                <img src="../../Images/icon/email-64.svg" width="64" height="64" alt="email ITAMCA" />
                            </div>
                            <div class="col-9">
                                <h4>Email Us</h4>
                                <a href="mailto:info@amcaauditing.com" class="text-dark" title="">
                                    info@amcaauditing.com
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="row align-items-center">
                            <div class="col-3">
                                <img src="../../Images/icon/clock-64.svg" width="64" height="64" alt="location ITAMCA" />
                            </div>
                            <div class="col-9">
                                <h4>Working Hour</h4>
                                <p>
                                    8:00 AM to 6:00 PM
                                    <span class="d-block">Monday to Saturday</span>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-5">
                <h2 class="section-title">Feel Free to <span>Contact Us</span></h2>
                @using (Html.BeginForm("ContactUsForm", "Home", FormMethod.Post, new { @class = "contact-form needs-validation", @id = "contactForm", @novalidate = "true" }))
                {
                    @Html.AntiForgeryToken()

                <div class="form-theme">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.EditorFor(model => model.ConcernPerson, new { htmlAttributes = new { @class = "form-control", @placeholder = "Name", @required = "true" } })
                        @Html.ValidationMessageFor(model => model.ConcernPerson, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.EditorFor(model => model.EmailId, new { htmlAttributes = new { @class = "form-control", @placeholder = "Email", @required = "true" } })
                        @Html.ValidationMessageFor(model => model.EmailId, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-4 pe-0 ">
                                @Html.DropDownListFor(model => model.CountryCode, new SelectList(ViewBag.CountryList, "value", "text", "+971"), "Code", new { @class = "form-control form-select search-SelectList", @required = "true" })
                                @Html.ValidationMessageFor(model => model.CountryCode, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-8">
                                @Html.EditorFor(model => model.ContactNumber, new { htmlAttributes = new { @class = "form-control nanCheck", @placeholder = "Mobile/Phone Number", @required = "true" } })
                                @Html.ValidationMessageFor(model => model.ContactNumber, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.TextAreaFor(model => model.MessageContact, new { @class = "form-control", @placeholder = "Type here your Message" })
                        @Html.ValidationMessageFor(model => model.MessageContact, "", new { @class = "text-danger" })
                        <span class="text-muted" id="charNum">0</span>
                    </div>
                    <div class="form-group">
                        <div class="d-lg-flex align-items-center justify-content-between">
                            <div class="position-relative form-input d-lg-flex align-items-center justify-content-between" id="captcha">
                                @Scripts.Render("~/bundles/jquery")
                                @Html.Captcha("Refresh", "", 5)
                            </div>
                        </div>
                    </div>
                    @*alert message text common*@
                    <p class="text-danger text-end" id="CapErrorMessage">@ViewBag.ErrorMessage</p>
                    <div class="form-group">
                        <input type="submit" value="Enquire Now" class="btn bg-primary text-light form-control" />
                    </div>
                </div>
                }
            </div>
        </div>
        </div>
    </section>
    <section class="py-5">
        <div class="container">
            <h2 class="section-title ">Our <span> Location </span></h2>
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3613.673503859007!2d55.147033715409464!3d25.079052983951293!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3e5f427c4a851f37%3A0x4329cfe0c67b85dd!2sAMCA%20Auditing%20And%20Business%20Advisors%20%7C%20Accounting%20Firm%20%26%20Bookkeeping%20Services%20Dubai%20%7C%20DMCC%20Approved%20Auditors!5e0!3m2!1sen!2sae!4v1642856725491!5m2!1sen!2sae" class="w-100" height="420" style="border: 0;" allowfullscreen="" loading="lazy"></iframe>
        </div>
    </section>
    <script type="text/javascript">
        $(document).ready(function () {
            history.pushState("", document.title, window.location.origin + "/contact-us");
        })
    </script>